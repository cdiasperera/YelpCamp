<!-- Navbar content-->
<div class="collapse navbar-collapse" id="main-nav">
  <form class="navbar-form navbar-right" 
    action="/campgrounds" 
    method="GET" >
    <div class="form-group">
      <input type="text" class="form-control" name="search" placeholder="Search Camps">
    </div>
    <input type="submit" class="btn btn-default"></input>
  </form>
  
  <ul class="nav navbar-nav navbar-right">
    <% if (!currentUser) { %>
      <li role="presentation"><a href="/login">Login</a></li>
      <li role="presentation"><a href="/users/register">Sign Up</a></li>
    <% } else { %>
      <% include ./notifs %>
      <li role="presentation"><a href="/users/<%= currentUser.id%>"><%= currentUser.username%></a></li>
      <li role="presentation"><a href="/logout">Logout</a></li>
    <% } %>
  </ul>
</div>