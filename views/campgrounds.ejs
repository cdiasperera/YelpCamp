<% include ./partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>These are our campgrounds</h1>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a campground</a>
    </header>

    <div class="campgrounds-row">
        <div class="col-lg-12">
            <h3>Our most popular campgrounds</h3>
        </div>
    </div>
    <div class="row text-center">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-sm-6 cold-md-6 col-lg-4">
                <div class="thumbnail">
                    <img class="img-grid" src="<%= campground.image %>"  alt="campground">
                    <div class="caption">
                        <h4><%= campground.name%></h4>
                    </div>
                    <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        <%  }); %>
    </div>
</div>

<% include ./partials/footer %>