<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item">Info1</li>
        <li class="list-group-item">Info2</li>
        <li class="list-group-item">Info3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= campground.image%>" alt="campground">
        <div class="caption-full">
          <h4 class="pull-right"> $PLACE/night</h4>
          <h4><a href=""><%= campground.name%></a></h4>
          <p><%= campground.desc%> </p>
          <p>Submitted by <%= campground.author.username%></p>
          <% if (currentUser && campground.author.id.equals(currentUser._id)) { %>
            <a href="<%= campground._id%>/edit" class="btn btn-warning">Edit</a>
            <form class="pull-right" action="?_method=DELETE" method="POST">
              <button class="btn btn-danger">Delete</button>
            </form>
        <% } %>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" href="./<%= campground._id%>/comments/new">Create a comment</a>
        </div>
        <hr>
        <% campground.comments.forEach((comment) => { %>
        <div class="row">
          <div class="col-md-12 comment">
              <strong><%= comment.author.username %></strong>
              <span class="pull-right">10 days ago</span>
              <div> 
                <p class="comment-text inline"><%= comment.text%></p>
                <span class="pull-right">
                  <a href="<%=campground._id%>/comments/<%=comment._id%>/edit" class="btn btn-xs btn-warning">Edit</a>
                  <button class="btn btn-xs btn-danger">Delete</button>
                </span>
              </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>