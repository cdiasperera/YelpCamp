<% include ../partials/header/meta %>
<link rel="stylesheet" href="/stylesheets/userEdit.css">
<% include ../partials/header/commonContent %>

<div class="container">
  <h1 class="formHeader">Edit <%= camp.name%></h1>
  <div class="new-form">
    <form action="/campgrounds/<%= camp._id%>/?_method=PUT%>" method="POST">
      <div class="form-group">
        <label for="name">Campground Name</label>
        <input class="form-control" 
          id="name"
          type="text" 
          name="camp[name]" 
          placeholder="Camp Name" 
          value="<%= camp.name%>"
          id="name"
          required>
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        <input class="form-control" 
        id="location"
        type="text" 
        name="camp[location]" 
        id="location"
        placeholder="Location"
        value="<%= camp.location %>">
      </div>
      <div class="form-group">
        <label for="price">Price Per Night</label>
        <input class="form-control" 
          id="price"
          type="number" 
          name="camp[price]" 
          min="0.00"
          step="0.01"
          placeholder="Price"
          value="<%= camp.price%>">
      </div>
      <div class="form-group">
        <label for="image">Photo URL</label>
        <input class="form-control" 
          id="image"
          type="text" 
          name="camp[image]" 
          placeholder="Image URL"
          value="<%= camp.image%>">
      </div>
      <div class="form-group">
        <label for="desc">Description</label>
        <textarea class="form-control" name="camp[desc]" rows="5" id="desc"><%= camp.desc%></textarea>
      </div>
      <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
      </div>
    </form>
    <a href="/campgrounds">Go to campgrounds.</a>
  </div>
</div>
<% include ../partials/footer %>