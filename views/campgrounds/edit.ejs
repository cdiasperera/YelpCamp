<% include ../partials/header %>
<div class="container">
  <h1 class="formHeader">Edit <%= camp.name%></h1>
  <div class="new-form">
    <form action="/campgrounds/<%= camp._id%>/?_method=PUT%>" method="POST">
      <div class="form-group">
        <input class="form-control" 
          type="text" 
          name="camp[name]" 
          placeholder="Camp Name" 
          value="<%= camp.name%>">
      </div>
      <div class="form-group">
        <input class="form-control" 
          type="number" 
          name="camp[price]" 
          min="0.00"
          step="0.01"
          placeholder="Price"
          value="<%= camp.price%>">
      </div>
      <div class="form-group">
        <input class="form-control" 
          type="text" 
          name="camp[source]" 
          placeholder="Image URL"
          value="<%= camp.image%>">
      </div>
      <div class="form-group">
          <input class="form-control" 
            type="text" 
            name="camp[desc]" 
            placeholder="Description"
            value="<%= camp.desc%>">
      </div>
      <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
      </div>
    </form>
    <a href="/campgrounds">Go to campgrounds.</a>
  </div>
</div>
<% include ../partials/footer %>