<% include ../partials/header/meta %>
<link rel="stylesheet" href="/stylesheets/userEdit.css">
<% include ../partials/header/commonContent %>

<div class="container">
  <h1 class="formHeader">Create a new campground</h1>
  <div class="new-form">
    <form action="/campgrounds" method="POST">
      <div class="form-group">
        <input class="form-control" 
          type="text" 
          name="camp[name]" 
          placeholder="Camp Name"
          id="name"
          required>
      </div>
      <div class="form-group">
          <input class="form-control" 
          type="text" 
          name="camp[location]" 
          id="location"
          placeholder="Location">
      </div>
      <div class="form-group">
        <input class="form-control" 
          type="number" 
          name="camp[price]" 
          min="0.00"
          step="0.01"
          placeholder="Price">
      </div>
      <div class="form-group">
        <input class="form-control" 
          type="text" 
          name="camp[image]" 
          placeholder="Image URL">
      </div>
      <div class="form-group">
        <input class="form-control" 
          type="text" 
          name="camp[desc]" 
          placeholder="Description">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
      </div>
    </form>
    <a href="/campgrounds">Go to campgrounds.</a>
  </div>
</div>

<% include ../partials/footer %>