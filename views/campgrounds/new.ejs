<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 id="newCampHeader">Create a new campground</h1>
        <div class="new-form">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="source" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
                <a href="/campgrounds">Go to campgrounds.</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>