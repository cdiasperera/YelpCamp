<% if (camp.comments.length === 0) {%>
  <p>There aren't any comment yet!</p>
<% } %>
<% camp.comments.forEach((comment) => { %>
  <div class="row">
    <div class="col-md-12 comment">
      <div>
        <img class="avatar" src="<%= comment.author.avatar%>" alt="">
        <a href="/users/<%= comment.author.id%>">
          <strong ><%= comment.author.username %></strong>
        </a>

        <% if (!comment.rating) { %>
          <em>No Rating</em>
        <% } else { %>
          <% for(let i = 0; i < comment.rating; i++) { %>
            <span class="star"></span>
          <% } %>
        <% } %>
        <% let timeString = moment(comment.createdAt).fromNow(); %>
        <% if (/^[a-z]/.test(timeString)) { %>
          <% // First letter is lowercase and must be capitalized %>
          <% timeString = timeString.replace(/^./, timeString.charAt(0).toUpperCase()); %>
        <% } %>
        <p class="time-since pull-right">
          <%= timeString %>
        </p>
      </div>
      <div> 
        <p class="comment-text inline"><%= comment.text%></p>
      </div>
    </div>
  </div>
<% }); %>
