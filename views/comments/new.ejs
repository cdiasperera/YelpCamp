<div class="collapse" id="collapseComment">
  <div class="well new-comment text-left">
    <% if (!currentUser) { %>
      <a href="/login">You need to logged in to comment</a>
    <% } else { %>
      <h4>
        Write Your Comment 
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      </h4>
      <form id="add-comment-form" 
      action="/campgrounds/<%= camp._id%>/comments/" method="POST">
      <div class="form-group">
        <textarea class="form-control"
        name="comment[text]"
        form="add-comment-form"
        cols="70" rows="5"></textarea>
      </div>  
      <div class="form-group">
        <div class="rating">
          <input type="radio" name="comment[rating]" id="star5" value="5">
          <label for="star5"></label>
          <input type="radio" name="comment[rating]" id="star4" value="4">
          <label for="star4"></label>
          <input type="radio" name="comment[rating]" id="star3" value="3">
          <label for="star3"></label>
          <input type="radio" name="comment[rating]" id="star2" value="2">
          <label for="star2"></label>
          <input type="radio" name="comment[rating]" id="star1" value="1">
          <label for="star1"></label>
        </div>
      </div>
      <div class="form-group">
        <button class="btn btn-success btn-sm">
          Comment
        </button>
      </div>
      </form>
    <% } %>
  </div>
</div>