<% include ../partials/header %>
<div class="container">
  <h1 class="formHeader">Edit comment for <%= camp.name%></h1>
  <div class="new-form">
    <form action="/campgrounds/<%= camp._id%>/comments/<%=comment._id%>?_method=PUT" 
      method="POST">
        <div class="form-group">
          <input class="form-control" 
          type="text" 
          name="comment[text]" 
          value=<%= comment.text%>>
        </div>
        <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" 
          type="submit">
            Submit
        </button>
        </div>
    </form>
    <a href="/campgrounds/<%= camp._id%>">Go back</a>
  </div>
</div>
<% include ../partials/footer %>