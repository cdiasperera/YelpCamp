<div class="collapse" id="collapseComment">
  <div class="card card-body bg-light edit-comment text-left pl-4">
      <h4>
        Edit Your Comment 
      </h4>
      <form id="add-comment-form" 
      action="/campgrounds/<%= camp._id%>/comments/<%= userComment._id%>?_method=PUT" 
      method="POST">
        <div class="form-group">
          <textarea class="form-control"
          name="comment[text]"
          form="add-comment-form"
          cols="70" rows="5"><%= userComment.text%></textarea>
        </div>  
        <div class="form-group">
          <div class="rating">
            <input required type="radio" name="comment[rating]" id="star5" value="5">
            <label for="star5"></label>
            <input required type="radio" name="comment[rating]" id="star4" value="4">
            <label for="star4"></label>
            <input required type="radio" name="comment[rating]" id="star3" value="3">
            <label for="star3"></label>
            <input required type="radio" name="comment[rating]" id="star2" value="2">
            <label for="star2"></label>
            <input required type="radio" name="comment[rating]" id="star1" value="1">
            <label for="star1"></label>
          </div>
          <em class="rating-required">Note: A rating is required</em>
        </div>
          <button class="btn btn-warning btn-sm mb-1">
            Edit
          </button>
      </form>
      <form class="" 
        action="/campgrounds/<%= camp._id %>/comments/<%=userComment._id%>?_method=DELETE" 
        method="post">
          <button class="btn btn-sm btn-danger">Delete</button>
      </form>
  </div>
</div>

<script>
  document.querySelector('#star<%= userComment.rating %>').checked = true
</script>