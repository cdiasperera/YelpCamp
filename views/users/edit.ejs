<% include ../partials/header/meta %>
<link rel="stylesheet" href="/stylesheets/userEdit.css">
<% include ../partials/header/commonContent %>

<div class="container">
  <div class="row">
    <h1 class="formHeader">Profile</h1>
    <form action="/users/<%= user._id%>?_method=PUT" method="POST">
      <div class="new-form">
        <div class="form-group">
          <input class="form-control sign-up" 
            id=username
            type="text" 
            pattern="^[A-Za-z0-9_]{2,15}$"
            name="user[username]" 
            required
            placeholder="Username"
            value="<%= user.username %>">
            <ul class="input-requirements">
              <li>Between 2 and 15 charactes long</li>
              <li>Must contain no special charactes or spaces</li>
            </ul>
        </div>
        <!-- <div class="form-group">
          <input class="form-control sign-up" 
            id="password"
            type="password" 
            name="password" 
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
            placeholder="Password"
            required>
            <ul class="input-requirements">
              <li>At least 8 characters long</li>
              <li>At least one number</li>
              <li>At least one uppercase letter</li>
              <li>At least one lowercase letter</li>
            </ul>
        </div> -->
        <div class="form-group">
          <input class="form-control" 
          type="text" 
          name="user[firstName]"
          placeholder="First Name"
          value="<%= user.firstName %>">
        </div>
        <div class="form-group">
          <input class="form-control" 
          type="text" 
          name="user[lastName]"
          placeholder="Last Name"
          value="<%= user.lastName %>">
        </div>
        <div class="form-group">
          <input class="form-control" 
          type="text" 
          name="user[avatar]"
          placeholder="Avatar Image URL"
          value="<%= user.avatar %>">
        </div>
        <div class="form-group">
          <input class="btn btn-lg btn-success btn-block" 
            type="submit"
            value="Save">
        </div>
      </div> 
    </form>
  </div>
</div>

<script src="/scripts/disablePopups.js"></script>
<script src="/scripts/inputValidator.js"></script>
<% include ../partials/footer %>